@model LopHocTrucTuyen.Models.QuanTriVien.ChiTietKhoaHoc
@using LopHocTrucTuyen.Models.QuanTriVien;
@{
    ViewBag.Title = "ChiTietLoaiKhoaHoc";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}

<div>
    <header style="position: sticky; left:0 ; top: 0; background-color: #fff; display: flex; align-items: center; justify-content: space-between; padding: 0px 16px; border-bottom: 1px solid #edede9; height: 80px;">
        <div style="display: flex; align-items: center; column-gap: 8px;">
            <i class="fa-solid fa-bars" style="color: black; font-size: 20px;"></i>
            <h2 style="font-size: 18px; color: #000; font-weight: 500;">Quản lý người dùng</h2>
        </div>
        <div style="position: relative">
            <button onclick="handleClickUser(event)" style="display: flex; align-items: center; column-gap: 4px; color: #000">
                <span style="font-size: 16px; font-weight: 500; color: #000">
                    Xin chào,
                    @if (Session["user"] != null)
                    {
                        NguoiDung user = Session["user"] as NguoiDung;
                        <span>@user.TenDangNhap</span>
                    }
                </span>
                <img src="~/Content/QuanTriVien/avatar.jpg" alt="Alternate Text" style="width: 30px; height: 30px; border-radius: 999px;" />
            </button>
            <div style="position: absolute; right: 0; top: 25px;" class="user">
                <div class="d-flex flex-column mt-3 user__body">
                    <a class="user__btn" style="padding: 8px 8px; border: 1px solid #f2f2f2; display: block; text-align: center; font-size: 15px;">Thông tin tài khoản</a>
                    <a href="/QuanTriVien/DangXuat" class="user__btn" style="padding: 8px 8px; border: 1px solid #f2f2f2; border-top: 0px; display: block; text-align: center; font-size: 15px;">Đăng xuất</a>
                </div>
            </div>
        </div>
    </header>

    <div style="padding:8px 20px;">
        <div class="d-flex gap-2 mt-2">
            <i style="color: #343a40" class="fa-solid fa-house"></i>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #343a40">Danh sách thể loại khóa học</span>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #000; ">Chi tiết</span>
        </div>
        <h1 style="font-size: 22px; font-weight: 600; color: #000; margin-top: 20px; display: block">Thông tin thể loại khóa học</h1>
        <div style="background-color: #fff; border-radius: 5px; width: 100%; margin-top: 10px; padding: 16px; border: 1px solid #dadada; width: 100%;">
            <form class="myForm4" action="/QuanTriVien/ThemLoaiKhoaHoc" method="post">
                <div style="width: 100%;">
                    <div class="d-flex justify-content-between gap-4">
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="TenLoai">Tên loại: </label>
                            @Html.TextBoxFor(model => model.loaiKH.TenLoai, new { @readonly = "readonly", @id = "TenLoai", @class = "form-control mt-2", placeholder = "Nhập tên loại" })
                            <span style="min-height: 20px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errTenLoai"></span>
                        </div>
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="MoTa">Mô tả: </label>
                            @Html.TextBoxFor(model => model.loaiKH.MoTa, new {@readonly = "readonly", @id = "MoTa", @class = "form-control mt-2", placeholder = "Nhập mô tả" })
                            <span style="min-height: 20px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errMoTa"></span>
                        </div>
                    </div>
                </div>
                <div style="margin-top: 10px; width: 100%" class="d-flex justify-content-end gap-2">
                    <button id="btnHuy" type="button" disabled class="btn btn-danger">Hủy</button>
                    <button id="btnSua" type="button" class="btn btn-primary">Sửa</button>
                    <button id="btnLuu" type="submit" disabled class="btn btn-success">Lưu</button>
                </div>
            </form>
        </div>
        <h1 style="font-size: 22px; font-weight: 600; color: #000; margin-top: 20px;">Khóa học thuộc thể loại</h1>
        <div style="background-color: #fff; border-radius: 5px; width: 100%; margin-top: 10px; padding: 16px; border: 1px solid #dadada; width: 100%;">
            <div class="row g-4">
                @if (Model.listKH_loai.Count > 0)
                {
                    foreach (var item in Model.listKH_loai)
                    {
                        <div class="col-3" style="border-radius: 10px;">
                            <img src="~/Content/GiangVien/HinhAnh/KhoaHoc/@item.AnhBia" alt="@item.TenKhoaHoc" style="display: block ; width: 100%; height: 150px; border-top-left-radius: 5px; border-top-right-radius: 5px; " />
                            <div style="padding: 8px 8px 0; height: 200px; border-bottom-left-radius: 5px; border-bottom-right-radius: 5px; border: 1px solid #dadada; background-color: #fff;">
                                <span style="font-size: 16px; font-weight: 500;">@item.TenKhoaHoc</span>
                                <span style="font-size: 14px; display: block; margin-top: 15px; color: #7f7f7f; ">Giảng viên: @item.GiangVien.HoTen</span>
                                @if (item.TrangThai == true)
                                {
                                    <span style="font-size: 14px; display: block; margin: 20px 0;">
                                        Trạng thái:
                                        <span style="padding: 4px 12px; background-color: #248823; color: #fff; border-radius: 20px; font-size: 12px;">Đã duyệt</span>
                                        <span style="font-size: 15px; display: block;  margin-top: 15px; font-weight: 500; color: #ff0000; ">
                                            Giá: @String.Format("{0:N0}", item.Gia) đ
                                        </span>
                                    </span>
                                    <div class="d-flex justify-content-end"><a href="#" class="btn btn-primary">Chi tiết</a></div>
                                }
                                else
                                {
                                    <span style="font-size: 14px; display: block; margin: 25px 0;">
                                        Trạng thái:
                                        <span style="padding: 4px 12px; background-color: #ffb703; color: #000; border-radius: 20px; font-size: 12px;">Chưa duyệt</span>
                                    </span>
                                    <div class="d-flex justify-content-end"><a href="#" style="display: inline-block" class="mt-3 btn btn-primary">Chi tiết</a></div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <span style="margin: 20px auto; display: block; text-align: center; font-size: 20px; font-weight: 500;">Hiện chưa có khóa học cho thể loại này !</span>
                }
            </div>
        </div>
    </div>
</div>

