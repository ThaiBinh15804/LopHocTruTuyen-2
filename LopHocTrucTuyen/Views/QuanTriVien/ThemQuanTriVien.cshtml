@model LopHocTrucTuyen.Models.QuanTriVien.ThemQuanTriVienModel
@using LopHocTrucTuyen.Models.QuanTriVien;
@{
    ViewBag.Title = "ThemQuanTriVien";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}

<div >
    <header style="background-color: #fff; display: flex; align-items: center; justify-content: space-between; padding: 0px 16px; border-bottom: 1px solid #edede9; height: 80px;">
        <div style="display: flex; align-items: center; column-gap: 8px;">
            <i class="fa-solid fa-bars" style="color: black; font-size: 20px;"></i>
            <h2 style="font-size: 18px; color: #000; font-weight: 500;">Quản lý người dùng</h2>
        </div>
        <div style="position: relative">
            <button onclick="handleClickUser(event)" style="display: flex; align-items: center; column-gap: 4px; color: #000">
                <span style="font-size: 16px; font-weight: 500; color: #000">
                    Xin chào,
                    @if (Session["user"] != null)
                    {
                        NguoiDung user = Session["user"] as NguoiDung;
                        <span>@user.TenDangNhap</span>
                    }
                </span>
                <img src="~/Content/QuanTriVien/avatar.jpg" alt="Alternate Text" style="width: 30px; height: 30px; border-radius: 999px;" />
            </button>
            <div style="position: absolute; right: 0; top: 25px;" class="user">
                <div class="d-flex flex-column mt-3 user__body">
                    <a class="user__btn" style="padding: 8px 8px; border: 1px solid #f2f2f2; display: block; text-align: center; font-size: 15px;">Thông tin tài khoản</a>
                    <a href="/QuanTriVien/DangXuat" class="user__btn" style="padding: 8px 8px; border: 1px solid #f2f2f2; border-top: 0px; display: block; text-align: center; font-size: 15px;">Đăng xuất</a>
                </div>
            </div>
        </div>
    </header>

    <div style="padding: 8px 16px;">
        <div style="background-color: #fff; border-radius: 5px; width: 100%; margin-top: 20px; padding: 16px 16px 30px; border: 1px solid #dadada; width: 100%;">
            <form id="myForm" action="/QuanTriVien/ThemQuanTriVien" method="post">
                <h1 style="font-size: 20px; font-weight: 500;">Thêm quản trị viên</h1>
                <div class="d-flex align-items-center mt-4" style="column-gap: 30px; width: 100%">
                    <div class="w-25">
                        <label style="font-size: 15px; color: #374151; font-weight: 500;" for="inputTenNguoiDung">Tên đăng nhập: </label>
                        @Html.TextBoxFor(model => model.TenDangNhap, new { @id = "TenDangNhap", @class = "form-control mt-2",  placeholder = "Nhập tên đăng nhập", })
                        <span style="min-height: 15px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errTenDangNhap"></span>
                    </div>
                    <div class="w-25">
                        <label style="font-size: 15px; color: #374151; font-weight: 500;" for="inputMatKhau">Mật khẩu: </label>
                        @Html.TextBoxFor(model => model.MatKhau, new { @id = "MatKhau", @class = "form-control mt-2", placeholder = "Nhập mật khẩu" })
                        <span style="min-height: 15px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errMatKhau"></span>
                    </div>
                </div>
                <div class="mt-2">
                    <label style="font-size: 15px; color: #374151; font-weight: 500;" for="inputEmail">Email: </label>
                    @Html.TextBoxFor(model => model.Email, new {@id = "Email" ,@class = "form-control mt-2 w-25", placeholder = "Nhập email" })
                    <span style="min-height: 15px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errEmail"></span>
                </div>
                <div class="mt-2">
                    <label style="font-size: 15px; color: #374151; font-weight: 500;" for="inputHoTen">Họ tên: </label>
                    @Html.TextBoxFor(model => model.HoTen, new { @id = "HoTen" ,@class = "form-control mt-2 w-25", placeholder = "Nhập họ tên" })
                    <span style="min-height: 15px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errHoTen"></span>
                </div>
                <div class="mt-2">
                    <label style="font-size: 15px; color: #374151; font-weight: 500;" for="inputEmail">Nhóm người dùng:</label>
                    <select id="MaNhom" name="MaNhom" class="form-control mt-2 w-25">
                        <option value="">Chọn nhóm người dùng</option>
                        <option value="4" @(Model.MaNhom == 4 ? "selected" : "")>Thu Ngân</option>
                        <option value="5" @(Model.MaNhom == 5 ? "selected" : "")>Kỹ thuật viên</option>
                    </select>   
                    <span style="min-height: 15px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errNhomNguoiDung"></span>
                </div>

                <div class="d-flex align-items-center gap-2">
                    <button class="btn mt-4 btn-danger">Xóa</button>
                    <button type="submit" class="btn btn-primary mt-4">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>
