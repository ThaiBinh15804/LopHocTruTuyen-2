@model List<LopHocTrucTuyen.Models.KhoaHoc>

@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/_LayoutHocVien.cshtml";
}

<!-- Divider line (Gạch ngang phân cách) -->
<hr class="my-0">
<div class="bg-white py-1 shadow-sm border-bottom mt-0">
    <div class="container">
        <ul class="nav justify-content-center mb-0">
            <li class="nav-item">
                <a class="nav-link text-dark" href="#">All</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="#">Khóa học zoom</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="#">Khóa học video</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="#">CNTT & Phần mềm</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="#">Năng suất văn phòng</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="#">Phát triển cá nhân</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="#">Thiết kế</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="#">Marketing</a>
            </li>
        </ul>
    </div>
</div>

<!-- Nội dung chính của trang chủ -->
<div class="container mt-4">
    <h3>Danh sách các khóa học</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/Content/HocVien/Images/@item.AnhBia"
                         class="card-img-top" alt="Ảnh khóa học" style="height: 150px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@item.TenKhoaHoc</h5>
                        <p class="card-text text-muted">@item.Gia</p>
                        <p class="card-text text-warning">
                            @for (var i = 0; i < 5; i++)
                            { <i class="bi bi-star-fill"></i> } <!-- Thêm ngôi sao đánh giá -->
                            <span class="text-dark">(100)</span>
                        </p>
                        <p class="card-text text-danger fw-bold">@String.Format("{0:0,0} đ", item.Gia)</p>
                    </div>
                    <!-- Chi tiết khóa học khi hover -->
                    <div class="position-absolute top-0 start-0 w-100 h-100 p-3 bg-white d-none"
                         style="z-index: 10; transition: opacity 0.3s;">
                        <h5 class="card-title">@item.TenKhoaHoc</h5>
                        <p class="card-text">@item.MoTa</p>
                        <p class="card-text text-muted">Giá: @String.Format("{0:0,0} đ", item.Gia)</p>
                        <button class="btn btn-primary">Thêm vào giỏ hàng</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


